@model ProjectMarket.Models.Project

@{
    ViewData["Title"] = "עריכת פרויקט";
}

<h2>עריכת פרויקט</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FieldOfStudy" class="control-label"></label>
                @Html.DropDownList("FieldOfStudyId", new SelectList(ViewBag.FieldsOfStudy, "Id", "Name",Model.FieldOfStudy.Name), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="AcademicInstitute" class="control-label"></label>
                @Html.DropDownList("AcademicInstituteId", new SelectList(ViewBag.AcademicInstitutes, "Id", "Name",Model.AcademicInstitute.Name), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="שמירה" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyProjects">חזרה לרשימת פרויקטים</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
