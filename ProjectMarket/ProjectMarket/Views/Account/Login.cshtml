@{
    ViewData["Title"] = "התחברות";
}


@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{
    $('#myTabs a').click(function (e) {
    e.preventDefault()
    $(this).tab('show')
    })
}


<div class="login-section">
    
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">login</a></li>
            <li role="presentation"><a href="#sign" aria-controls="sign" role="tab" data-toggle="tab">sign</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="login">
                <form asp-action="Login">

                <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png"/>
                <div class="form-group">
                    <input class="form-control" type="text" min="4" max="20" name="UserName" id="username" placeholder="שם משתמש"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" min="8" max="200" name="Password" id="password" placeholder="סיסמה"/>
                </div>
                <div hidden>
                    <input type="text" name="ReturnUrl" id="ReturnUrl" value="@ViewBag.ReturnUrl"/>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">התחבר</button>
                </form>
                </div>
