@model ProjectMarket.ViewModels.ProjectFilter

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MinPrice" class="control-label"></label>
            <input asp-for="MinPrice" class="form-control" />
            <span asp-validation-for="MinPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaxPrice" class="control-label"></label>
            <input asp-for="MaxPrice" class="form-control" />
            <span asp-validation-for="MaxPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FieldOfStudyId" class="control-label"></label>
            @Html.DropDownList("FieldOfStudyId", new SelectList((IEnumerable<FieldOfStudy>)ViewData["FieldsOfStudy"], "Id", "Name"), " ---   בחר תחום לימוד   ---", new {@id = "FieldOfStudyId", @class = "form-control" })
        </div>

        <div class="form-group">
            <input id="project-filter" type="submit" value="סנן" class="btn btn-default"/>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/project-filter.js"></script>
}


