@model ProjectMarket.Models.Project

@{
    ViewData["Title"] = "יצירת פרויקט";
}

<h2>יצירת פרויקט</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FieldOfStudy" class="control-label"></label>
                @Html.DropDownList("FieldOfStudyId", new SelectList(ViewBag.FieldsOfStudy, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="AcademicInstitute" class="control-label"></label>
                @Html.DropDownList("AcademicInstituteId", new SelectList(ViewBag.AcademicInstitutes, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" id="address_name" />
                <span asp-validation-for="Address" class="text-danger"></span>
                <span>
                    <input type="button" class="btn bg-primary" value="בחר כתובת" onclick="OpenMap()" />
                </span>

                <script type="text/javascript">
                    var popup;
                    function OpenMap() {
                        popup = window.open("/select_address.html", "Popup", "width=900,height=700");
                        popup.focus();
                    }
                </script>
                </div>
            <div class="form-group">
                <input type="submit" value="שמירה" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
