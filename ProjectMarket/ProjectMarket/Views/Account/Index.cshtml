@model ProjectMarket.Models.User

@{
    ViewData["Title"] = "ניהול חשבון";
}

<h2>פרטי החשבון</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EMail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EMail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsAdmin)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ChangePassword">שנה סיסמה</a> | <a asp-action="Edit">עדכן פרטים</a>
</div>



<div class="card-content">
    @if (ViewData["MyProjects"] != null && ((IReadOnlyCollection<Project>)ViewData["MyProjects"]).Count() > 0)
    {
<div class="card-desc">
    <h3>הפרויקטים שלי</h3>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                שם הפרויקט
            </th>
            <th>
                תיאור
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

            @foreach (var item in ((IReadOnlyCollection<Project>)ViewData["MyProjects"]))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">עריכה</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">פרטים</a> |
                    </td>
                </tr>
            }

    </tbody>
    </table>
        }
        else
        {
            <div class="card-desc">
                <h3> עוד לא יצרת פרויקטים </h3>
            </div>
        }
<div class="card-desc">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal">
        <a asp-action="Create"> הוספת פרויקט</a>
    </button>
    </div>
</div>

    


<div class="card-content">
@if (ViewData["MyProjects"] != null && ((IReadOnlyCollection<Sale>) ViewData["PurchasedProjects"]).Count() > 0)
{
    <div class="card-desc">
        <h3>הפרויקטים שקניתי</h3>
    </div>


    <table class="table">
        <thead>
        <tr>
            <th>
                שם הפרויקט
            </th>
            <th>
                תיאור
            </th>
            <th>מחיר קניה</th>
            <th>דירוג</th>
            <th>ציון</th>
        </tr>
        </thead>
        <tbody>

            @foreach (var item in ((IReadOnlyCollection<Sale>) ViewData["PurchasedProjects"]))
             {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => item.Project.Name)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Project.Description)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Price) ש"ח
                     </td>
            @if (item.Rank == null)
            {
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                        עדכן
                    </button>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
  
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            }
                  
            </tr>
             }

        </tbody>
    </table>
}
else
{
    <div class="card-desc">
        <h3> עוד לא רכשת פרויקטים </h3>
    </div>
}
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">קניית פרוייקט</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <a asp-controller="Sales" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-primary">עדכן</a>
                <button type="button" class="btn" data-dismiss="modal">סגור</button>
            </div>
        </div>
    </div>
</div>
